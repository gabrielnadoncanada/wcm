{% extends '@Wcm/Layout/layout.html.twig' %}



{% block main %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Categories</th>
                <td>{{ product.categories }}</td>
            </tr>
            <tr>
