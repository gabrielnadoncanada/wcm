{% extends '@Wcm/Layout/layout.html.twig' %}


{% block content %}
    {#    ========================= MODAL==========================    #}
    <div class="modal fade" id="modalEditImage" name="modalEditImage" tabindex="-1" role="dialog" >
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" style="text-align: left;">
                        <b>{{ 'image.edit'|trans({}, 'image') }}</b>
                    </h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12 form-group">
                            <input type="hidden" id="imageID">
                            <label for="newImageTitle">{{ 'image.title'|trans({}, 'image') }}</label>
                            <input class="form-control" type="text" id="newImageTitle" name="newImageTitle"
                                   placeholder="{{ 'image.title'|trans({}, 'image') }}">
                            </br>
                            <label for="newImageTitle">{{ 'image.alt'|trans({}, 'image') }}</label>
                            <input class="form-control" type="text" id="newImageAlt" name="newImageTitle"
                                   placeholder="{{ 'image.alt'|trans({}, 'image') }}">
                        </div>
                    </div>
                </div>
                <div class="modal-footer" >
                    <button type="button" class="btn d-none d-md-inline btn-rose float-right" style="margin-right: 10px" data-dismiss="modal">{{ 'bci.Wcm.general.action.cancel'|trans({}, 'Wcm_bundle') }}</button>
                    <button type="button" class="btn btn-primary"
                            id="saveImageEdit" name="saveImageEdit"
                            data-ice="app.saveEditImage"
                            data-ice-params="{{ path('setImageTitle', {'imageID':'*'}) }}">{{ 'bci.Wcm.general.action.save'|trans({}, 'Wcm_bundle') }}</button>
                </div>
            </div>
        </div>
    </div>
    {{ include('@Wcm/product/_form.html.twig', {'button_label': 'Update'}) }}


    {{ include('@Wcm/_shared/_delete_form.html.twig', { 'route': 'product_delete', 'id': product.id}) }}
{% endblock %}


