{% extends '@Wcm/Layout/layout.html.twig' %}

{% block content %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <input class="float-right btn btn-primary ml-auto mb-0" type="submit" value=" {{ app.request.get('id') ? 'Enregistrer' : 'Ajouter' }}" id="submit">
    {{ form_end(form) }}
    <form method="post">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ app.request.get('id')) }}">
        <button class=" btn btn-danger"><i class="far fa-trash-alt"></i></button>
    </form>
{% endblock %}

