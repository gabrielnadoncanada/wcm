<table class="table">
    <thead>
    <tr>
        {% for field in fields %}
            <th>{{ field.title }}</th>
        {% endfor %}
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
        {% for item in entity %}
            <tr>
                {% for field in fields %}
                    <td>
                        {{ attribute(item, field.title) }}
                    </td>
                {% endfor %}
                <td>
                    <a href="{{ path('wcm_' ~ entity_title ~ '_edit', {'id': item.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

